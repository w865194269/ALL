<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#d4237a"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dialog_title"
            android:textSize="24dp"
            android:text="验证码"
            />

        <ImageView
            android:layout_below="@id/tv_dialog_title"
            android:id="@+id/iv_dialog_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:layout_below="@id/tv_dialog_title"
            android:id="@+id/et_dialog_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_dialog_code"
            android:hint="请输入验证码"
            />
        <Button
            android:layout_below="@id/et_dialog_code"
            android:id="@+id/bt_dialog_destory"
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/et_dialog_code"
            android:layout_toRightOf="@id/bt_dialog_destory"
            android:id="@+id/bt_dialog_sure"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>